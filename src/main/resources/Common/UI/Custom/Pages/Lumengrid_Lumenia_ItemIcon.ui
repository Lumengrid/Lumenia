Button {
  Anchor: (Width: 131, Bottom: 10, Right: 10);
  Padding: (Full: 12);
  Background: (Color: #1a1a1a(0.6));
  LayoutMode: Top;
  Style: (
    Hovered: (
      Background: #2a2a2a(0.8),
    ),
    Pressed: (
      Background: #3a3a3a(0.9),
    )
  );

    AssetImage #ResourceIcon {
      Anchor: (Width: 64, Height: 64, Bottom: 5);
      Visible: false;
    }

  ItemIcon #ItemIcon {
    Anchor: (Width: 64, Height: 64, Bottom: 5);
    Visible: true;
  }

  Label #ItemName {
    Style: (
      FontSize: 14,
      RenderBold: true,
      TextColor: #ffffff
    );
    Anchor: (Bottom: 5);
  }

  TextButton #ItemId {
    Anchor: (Height: 16);
    Style: TextButtonStyle(
      Default: (LabelStyle: (FontSize: 11, TextColor: #aaaaaa)),
      Hovered: (LabelStyle: (FontSize: 11, TextColor: #4a9eff)),
      Pressed: (LabelStyle: (FontSize: 11, TextColor: #6abfff))
    );
    Background: (Color: #000000(0.0));
    Padding: (Full: 0);
  }
}
