$C = "../Common.ui";

Group #RecipePanel {
  Visible: true;
  LayoutMode: Top;
  Anchor: (Height: 750);

  Group #ItemInfo {
    LayoutMode: Top;
    Padding: (Full: 10, Bottom: 5);
    Background: (Color: #1a1a1a(0.6));

    Group #ItemHeader {
      LayoutMode: Left;

      Group {
        LayoutMode: Left;
        FlexWeight: 1;

        AssetImage #ResourceIcon {
          Anchor: (Width: 48, Height: 48);
          Visible: false;
        }

        ItemIcon #ItemIcon {
          Anchor: (Width: 48, Height: 48);
          Visible: true;
        }

        Group {
          LayoutMode: Top;
          Padding: (Left: 10);

          Label #ItemName {
            Style: (
              FontSize: 18,
              RenderBold: true,
              TextColor: #ffffff
            );
          }

          TextButton #ItemId {
            Anchor: (Height: 18);
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 12, TextColor: #888888)),
              Hovered: (LabelStyle: (FontSize: 12, TextColor: #4a9eff)),
              Pressed: (LabelStyle: (FontSize: 12, TextColor: #6abfff))
            );
            Background: (Color: #000000(0.0));
            Padding: (Full: 0);
          }
        }
      }
    }

    Group #ItemProperties {
      LayoutMode: Top;
      Padding: (Top: 5);
    }
  }

  Group #SectionButtons {
    LayoutMode: Left;
    Padding: (Top: 10, Bottom: 5);
    Anchor: (Height: 50);

    TextButton #InfoButton {
      Anchor: (Width: 111, Height: 40);
      Text: "Info";
      Style: TextButtonStyle(
        Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
        Hovered: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.8)),
        Pressed: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.9)),
        Sounds: $C.@ButtonSounds
      );
      Background: #2a2a2a(0.6);
      Padding: (Full: 8);
    }

    Group {
      Anchor: (Width: 10);
    }

    TextButton #HowToCraftButton {
      Anchor: (Width: 111, Height: 40);
      Text: "How to Craft";
      Style: TextButtonStyle(
        Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
        Hovered: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.8)),
        Pressed: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.9)),
        Sounds: $C.@ButtonSounds
      );
      Background: #2a2a2a(0.6);
      Padding: (Full: 8);
    }

    Group {
      Anchor: (Width: 10);
    }

    TextButton #UsedInButton {
      Anchor: (Width: 111, Height: 40);
      Text: "Used In";
      Style: TextButtonStyle(
        Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
        Hovered: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.8)),
        Pressed: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.9)),
        Sounds: $C.@ButtonSounds
      );
      Background: #2a2a2a(0.6);
      Padding: (Full: 8);
    }
  }

  Group #InfoSection {
    Visible: false;
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Top: 10);

    Group #ItemPropertiesInfo {
      LayoutMode: Top;
      Padding: (Full: 8);
      Background: (Color: #1a1a1a(0.7));

      Group #MaxStackRow {
        LayoutMode: Left;
        Padding: (Bottom: 2);
        Anchor: (Height: 24);

        Label #MaxStackLabel {
          FlexWeight: 1;
          Style: (
            FontSize: 14,
            TextColor: #aaaaaa,
            Wrap: true
          );
        }

        TextButton #GiveItemButton {
          Anchor: (Width: 40, Height: 24);
          Text: "Give";
          Visible: false;
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #2a7a2a(0.8)),
            Pressed: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #2a7a2a(0.9)),
            Sounds: $C.@ButtonSounds
          );
          Background: #1a5a1a(0.6);
          Padding: (Full: 3);
        }
      }

      Group #ItemPropertiesList {
        LayoutMode: Top;
      }
    }

    Group #DropsSection {
      Visible: false;
      LayoutMode: Top;
      Padding: (Top: 15);

      Label {
        Style: (
          FontSize: 16,
          TextColor: #ffffff,
          RenderBold: true
        );
        Text: "Dropped By:";
        Padding: (Bottom: 8);
      }

      Group #DropsPaginationControls {
        LayoutMode: Left;
        Padding: (Bottom: 10);
        Anchor: (Height: 50);
        Visible: false;

        TextButton #DropsPrevPageButton {
          Anchor: (Width: 70, Height: 35);
          Text: "Prev";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
            Hovered: (Background: #3a3a3a(0.9)),
            Pressed: (Background: #4a4a4a(1.0)),
            Sounds: $C.@ButtonSounds
          );
          Background: #2a2a2a(0.6);
          Padding: (Full: 8);
        }

        Label #DropsPaginationInfo {
          FlexWeight: 1;
          Text: "1 of 1";
          Style: (
            FontSize: 14,
            TextColor: #ffffff,
            HorizontalAlignment: Center,
            VerticalAlignment: Center,
          );
          Background: #2a2a2a(0.6);
          Padding: (Full: 8);
          Anchor: (Left: 10, Right: 10);
        }

        TextButton #DropsNextPageButton {
          Anchor: (Width: 70, Height: 35);
          Text: "Next";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
            Hovered: (Background: #3a3a3a(0.9)),
            Pressed: (Background: #4a4a4a(1.0)),
            Sounds: $C.@ButtonSounds
          );
          Background: #2a2a2a(0.6);
          Padding: (Full: 8);
        }
      }

      Group #DropsList {
        LayoutMode: Top;
        Padding: (Full: 8);
        Background: (Color: #1a1a1a(0.7));
      }
    }
  }

  Group #PaginationControls {
    LayoutMode: Left;
    Padding: (Top: 10, Bottom: 15);
    Anchor: (Height: 50);
    Visible: false;

    TextButton #PrevPageButton {
      Anchor: (Width: 70, Height: 35);
      Text: "Prev";
      Style: TextButtonStyle(
        Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
        Hovered: (Background: #3a3a3a(0.9)),
        Pressed: (Background: #4a4a4a(1.0)),
        Sounds: $C.@ButtonSounds
      );
      Background: #2a2a2a(0.6);
      Padding: (Full: 8);
    }

    Label #PaginationInfo {
      FlexWeight: 1;
      Text: "1 of 1";
      Style: (
        FontSize: 14,
        TextColor: #ffffff,
        HorizontalAlignment: Center,
        VerticalAlignment: Center,
      );
      Background: #2a2a2a(0.6);
      Padding: (Full: 8);
      Anchor: (Left: 10, Right: 10);
    }

    TextButton #NextPageButton {
      Anchor: (Width: 70, Height: 35);
      Text: "Next";
      Style: TextButtonStyle(
        Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
        Hovered: (Background: #3a3a3a(0.9)),
        Pressed: (Background: #4a4a4a(1.0)),
        Sounds: $C.@ButtonSounds
      );
      Background: #2a2a2a(0.6);
      Padding: (Full: 8);
    }
  }

  Group #CraftSection {
    Visible: false;
    LayoutMode: Top;
    FlexWeight: 1;

    Label #NoRecipes {
      Visible: false;
      Style: (
        FontSize: 13,
        TextColor: #888888
      );
      Padding: (Top: 20);
    }

    Group #CraftList {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      FlexWeight: 1;
    }
  }

  Group #UsageSection {
    Visible: false;
    LayoutMode: Top;
    FlexWeight: 1;

    Label #NoUsageRecipes {
      Visible: false;
      Style: (
        FontSize: 13,
        TextColor: #888888
      );
      Padding: (Top: 20);
    }

    Group #UsageList {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      FlexWeight: 1;
    }
  }


  Label #NoRecipes {
    Visible: false;
    Style: (
      FontSize: 13,
      TextColor: #888888
    );
    Padding: (Top: 20);
  }
}
