$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1120, Height: 700);

    #Title {
      Group {
        $C.@Title {
          @Text = "Lumenia JEI";
        }

        $C.@HeaderSearch {}

        Group #HeaderControls {
          LayoutMode: Left;
          Padding: (Top: 5, Left: 10, Right: 10);
          Anchor: (Height: 30);

          Group #KeybindSettings {
            LayoutMode: Left;
            Padding: (Right: 10);

            $C.@CheckBoxWithLabel #EnableKeybindCheckbox {
              @Text = "Enable keybind";
              Anchor: (Height: 20);
            }
          }

          Group {
            FlexWeight: 1;
          }

          Group {
            LayoutMode: Left;
            Padding: (Left: 10, Right: 240, Bottom: 5);

            Label {
              Style: (
                FontSize: 13,
                TextColor: #aaaaaa,
                VerticalAlignment: Center
              );
              Text: "Mod:";
              Padding: (Right: 5);
            }

            $C.@DropdownBox #ModFilterDropdown {
              Anchor: (Width: 200, Height: 22);
              Style: @DefaultDropdownBoxStyle;
            }
          }
        }
      }
    }

    #Content {
      LayoutMode: Left;

      Group #ItemGridSection {
        FlexWeight: 2;
        LayoutMode: Top;
        Padding: (Left: 10, Right: 5);

        Group #ItemGridContainer {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ItemGrid {
            LayoutMode: Top;
          }
        }

        Group #PaginationControls {
          LayoutMode: Left;
          Padding: (Top: 10, Bottom: 10, Right: 30);
          Anchor: (Height: 40);

          TextButton #PrevPageButton {
            Anchor: (Width: 70, Height: 35);
            Text: "Prev";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
              Hovered: (Background: #3a3a3a(0.9)),
              Pressed: (Background: #4a4a4a(1.0)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.7);
            Padding: (Full: 6);
          }

          Label #PaginationInfo {
            FlexWeight: 1;
            Text: "1 of 1";
            Style: (
              FontSize: 14,
              TextColor: #aaaaaa,
              HorizontalAlignment: Center,
              VerticalAlignment: Center,
            );
            Background: #2a2a2a(0.6);
            Padding: (Full: 8);
            Anchor: (Left: 10, Right: 10);
          }

          TextButton #NextPageButton {
            Anchor: (Width: 70, Height: 35);
            Text: "Next";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
              Hovered: (Background: #3a3a3a(0.9)),
              Pressed: (Background: #4a4a4a(1.0)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.7);
            Padding: (Full: 6);
          }
        }
      }

      Group #RecipeSection {
        FlexWeight: 1;
        LayoutMode: Top;
        Padding: (Left: 5);
      }
    }
  }
}

$C.@BackButton {}
